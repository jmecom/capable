package unsafe
module malloc_demo

use sys::system

pub fn main(sys: RootCap) -> i32 {
  let c = sys.mint_console()
  let p = sys.malloc(8)
  let p32 = sys.cast_u8_to_u32(p)
  let p2 = sys.cast_u32_to_u8(p32)
  if (p == p2) {
    c.println("malloc ok")
  } else {
    c.println("malloc mismatch")
  }
  sys.free(p)
  return 0
}
