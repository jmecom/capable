package unsafe
module malloc_demo

use sys::system

pub fn main(rc: RootCap) -> i32 {
  let c = rc.mint_console()
  let alloc = rc.mint_alloc_default()
  let p = alloc.malloc(8)
  let p32 = alloc.cast_u8_to_u32(p)
  let p2 = alloc.cast_u32_to_u8(p32)
  if (p == p2) {
    c.println("malloc ok")
  } else {
    c.println("malloc mismatch")
  }
  alloc.free(p)
  return 0
}
