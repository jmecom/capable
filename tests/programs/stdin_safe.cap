package safe
module stdin_safe
use sys::root
use sys::console
use sys::io
use sys::string

pub fn main(rc: RootCap) -> i32 {
  let c = rc.mint_console()
  let code = match io.read_stdin_to_string() {
    Ok(s) => {
      let n = s.len()
      if (n == 0) {
        c.println("stdin ok")
      } else {
        c.println("stdin data")
      }
      0
    }
    Err(e) => {
      c.println("stdin err")
      1
    }
  }
  return code
}
