package safe
module stdin_safe
use sys::system
use sys::console
use sys::io
use sys::string

pub fn main(sys: RootCap) -> i32 {
  let c = sys.mint_console()
  let code = match io::read_stdin_to_string() {
    Ok(s) => {
      let n = string::len(s)
      if (n == 0) {
        console::println(c, "stdin ok")
      } else {
        console::println(c, "stdin data")
      }
      0
    }
    Err(e) => {
      console::println(c, "stdin err")
      1
    }
  }
  return code
}
