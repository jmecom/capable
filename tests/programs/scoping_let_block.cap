module scoping_let_block
use sys::system
use sys::console

pub fn main(sys: RootCap) -> i32 {
  let c = sys.mint_console()
  let x = 1

  if (true) {
    let x = 2
    console::println(c, "inner x should be 2")
  }

  console::println(c, "outer x should still be 1")
  console::println(c, "scoping let block test ok")
  return 0
}
