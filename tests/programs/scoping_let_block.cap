module scoping_let_block
use sys::system

pub fn main(rc: RootCap) -> i32 {
  let c = rc.mint_console()
  let x = 1

  if (true) {
    let x = 2
    c.assert(x == 2)
    c.println("inner x should be 2")
  }

  c.assert(x == 1)
  c.println("outer x should still be 1")
  c.println("scoping let block test ok")
  return 0
}
