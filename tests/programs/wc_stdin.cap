package safe
module wc_stdin
use sys::root
use sys::console
use sys::io
use sys::string
use sys::bytes
use sys::buffer
use sys::vec

pub fn main(rc: RootCap) -> i32 {
  let c = rc.mint_console()
  let code = match io.read_stdin_to_string() {
    Ok(s) => {
      let buf = s.bytes()
      let bytes = buf.len()
      let words_vec = s.split_whitespace()
      let words = words_vec.len()
      let alloc = buffer.alloc_default()
      vec.vec_string_free(alloc, words_vec)
      let i: i32 = 0
      let lines: i32 = 0
      while (i < bytes) {
        let b = buf.at(i)
        if (b == 10u8) {
          lines = lines + 1
        }
        i = i + 1
      }
      c.print_i32(lines)
      c.print(" ")
      c.print_i32(words)
      c.print(" ")
      c.print_i32(bytes)
      c.println("")
      0
    }
    Err(e) => {
      c.println("stdin err")
      1
    }
  }
  return code
}
