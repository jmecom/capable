package safe
module wc_stdin
use sys::system

pub fn main(sys: RootCap) -> i32 {
  let c = sys.mint_console()
  let code = match sys.read_stdin_to_string() {
    Ok(s) => {
      let buf = s.bytes()
      let bytes = buf.len()
      let words_vec = s.split_whitespace()
      let words = words_vec.len()
      let alloc = sys.mint_alloc_default()
      alloc.vec_string_free(words_vec)
      let i: i32 = 0
      let lines: i32 = 0
      while (i < bytes) {
        let b = buf.at(i)
        if (b == 10u8) {
          lines = lines + 1
        }
        i = i + 1
      }
      c.print_i32(lines)
      c.print(" ")
      c.print_i32(words)
      c.print(" ")
      c.print_i32(bytes)
      c.println("")
      0
    }
    Err(e) => {
      c.println("stdin err")
      1
    }
  }
  return code
}
