package unsafe
module slice_unsafe
use sys::system

pub fn main(rc: RootCap) -> i32 {
  let c = rc.mint_console()
  let alloc = rc.mint_alloc_default()
  let p = alloc.malloc(4)
  let slice = alloc.slice_from_ptr(p, 4)
  let len = slice.len()
  c.assert(len == 4)
  if (len == 4) {
    c.println("slice ok")
  } else {
    c.println("slice bad")
  }
  alloc.free(p)
  return 0
}
