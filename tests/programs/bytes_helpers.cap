package safe
module bytes_helpers
use sys::system

pub fn main(rc: RootCap) -> i32 {
  let c = rc.mint_console()
  let s = " \n"
  let buf = s.bytes()
  let b0 = buf.at(0)
  let b1 = buf.at(1)
  let tail = buf.slice_range(1, 2)
  match (tail) {
    Ok(t) => { c.assert(t.len() == 1 && t.at(0) == '\n') }
    Err(_) => { c.assert(false) }
  }
  c.assert(b0.is_whitespace() && b1.is_whitespace())
  c.println("bytes ok")
  return 0
}
