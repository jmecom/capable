package safe
module buffer_push_safe
use sys::system

pub fn main(sys: RootCap) -> i32 {
  let c = sys.mint_console()
  let alloc = sys.mint_alloc_default()
  match alloc.buffer_new(1) {
    Ok(b) => {
      match b.push(7u8) {
        Ok(u) => { u }
        Err(e) => {
          c.println("push err")
          alloc.buffer_free(b)
          return 1
        }
      }
      let len = b.len()
      sys.assert(len == 2)
      if (len == 2) {
        c.println("push ok")
      } else {
        c.println("push bad")
      }
      alloc.buffer_free(b)
      return 0
    }
    Err(e) => {
      c.println("buffer err")
      return 1
    }
  }
}
