package safe
module buffer_push_safe
use sys::root
use sys::console
use sys::buffer

pub fn main(rc: RootCap) -> i32 {
  let c = rc.mint_console()
  let alloc = buffer.alloc_default()
  match buffer.buffer_new(alloc, 1) {
    Ok(b) => {
      match b.push(7u8) {
        Ok(u) => { u }
        Err(e) => {
          c.println("push err")
          buffer.buffer_free(alloc, b)
          return 1
        }
      }
      let len = b.len()
      if (len == 2) {
        c.println("push ok")
      } else {
        c.println("push bad")
      }
      buffer.buffer_free(alloc, b)
      return 0
    }
    Err(e) => {
      c.println("buffer err")
      return 1
    }
  }
}
