package safe
module buffer_safe
use sys::root
use sys::console
use sys::buffer

pub fn main(rc: RootCap) -> i32 {
  let c = rc.mint_console()
  let alloc = buffer.alloc_default()
  match buffer.buffer_new(alloc, 3) {
    Ok(b) => {
      let slice = b.as_slice()
      let len = slice.len()
      if (len == 3) {
        c.println("buffer ok")
      } else {
        c.println("buffer bad")
      }
      buffer.buffer_free(alloc, b)
      return 0
    }
    Err(e) => {
      c.println("buffer err")
      return 1
    }
  }
}
