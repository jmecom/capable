module method_calls
use sys::system

struct Pair { left: i32, right: i32 }

impl Pair {
  fn sum(self: Pair) -> i32 {
    return self.left + self.right
  }

  fn add(self: Pair, value: i32) -> i32 {
    return self.left + value
  }
}

pub fn main(rc: RootCap) -> i32 {
  let c = rc.mint_console()
  let p = Pair { left: 3, right: 4 }
  let a = p.sum()
  let b = Pair { left: 5, right: 6 }.sum()
  let c2 = p.add(10)
  c.assert(a == 7)
  c.assert(b == 11)
  c.assert(c2 == 13)
  c.print_i32(a)
  c.print(" ")
  c.print_i32(b)
  c.print(" ")
  c.print_i32(c2)
  c.println("")
  return 0
}
